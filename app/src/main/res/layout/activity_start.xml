<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FDFCFC"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rv_video"
        android:gravity="center"
        android:layout_marginTop="108dp"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <VideoView
            android:id="@+id/vv_start"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35sp"
        android:id="@+id/title_splash"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/rv_video"
        android:text="2nk Booking System"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_splash"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="This system digitizes the process of getting bus tickets by using the modern technology of QR code scanning to secure a ticket."
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_height="80dp"
        android:padding="4dp">
        <VideoView
            android:id="@+id/vv_scan"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
    </RelativeLayout>

</RelativeLayout>