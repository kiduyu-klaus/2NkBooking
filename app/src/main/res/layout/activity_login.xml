<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_splash"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/snackbar_phone_email"
        android:layout_margin="4dp"
        android:gravity="center|bottom">

        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/login_phone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableEnd="@drawable/ic_phone"
            android:padding="9dp"
            android:text="Login with Phone"
            android:background="#DF74F3"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            app:button_cornerRadius="14dp"
            app:button_duration="250"
            app:button_scale="0.87" />

        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/login_google"
            android:layout_width="250dp"
            android:layout_marginTop="7dp"
            android:background="#57A56A"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_phone"
            android:drawableEnd="@drawable/ic_email"
            android:padding="9dp"
            android:textSize="17sp"
            android:text="Login with Email"
            app:button_cornerRadius="14dp"
            app:button_duration="250"
            app:button_scale="0.87"/>
    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:id="@+id/snackbar_phone_email"/>
</RelativeLayout>